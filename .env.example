# .env.example — ComuniVeci Post Service

# Modo del repositorio:
# - memory: datos volátiles en memoria (modo desarrollo)
# - mongo: persistencia real usando MongoDB
REPO_MODE=memory

# URI de conexión a MongoDB (usado si REPO_MODE=mongo)
MONGO_URI=mongodb://localhost:27017/

# Nombre de la base de datos MongoDB (usado si REPO_MODE=mongo)
DB_NAME=communiveci